<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/element_width"
    android:layout_height="@dimen/element_height"
    android:layout_margin="4dp"
    android:clipChildren="true"
    android:clipToPadding="true"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="@dimen/element_width"
        android:layout_height="@dimen/element_height"
        android:background="?selectableItemBackground"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/elementIcon"
            android:layout_width="@dimen/element_width"
            android:layout_height="@dimen/element_height"
            android:scaleType="centerCrop"
            tools:src="@mipmap/ic_launcher" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/elementTime"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="8dp"
            android:textColor="@android:color/white"
            tools:text="Giobbia, ore 15:99" />

        <TextView
            android:id="@+id/elementTitle"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/elementTime"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lines="3"
            android:padding="8dp"
            android:textColor="@android:color/white"
            tools:text="LA COSA" />

    </RelativeLayout>

</android.support.v7.widget.CardView>